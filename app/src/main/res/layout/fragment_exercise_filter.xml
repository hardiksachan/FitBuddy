<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.hardiksachan.fitbuddy.mainactivityfragments.exerciseselector.exercisefilter.ExerciseFilterViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".mainactivityfragments.exerciseselector.exercisefilter.ExerciseFilterFragment">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cv_category_filter_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_normal" />

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            app:srcCompat="@drawable/ic_done_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="@dimen/spacing_normal"
            android:onClick="@{() -> viewModel.onDoneFabClicked()}" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>